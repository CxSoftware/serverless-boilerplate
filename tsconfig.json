{
	"compilerOptions":
	{
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [ "node" ],
		"skipLibCheck": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [ "node_modules" ]
}
